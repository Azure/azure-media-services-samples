<UserControl x:Class="Microsoft.SilverlightMediaFramework.Samples.SilverlightAd.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="500">

    <Grid x:Name="LayoutRoot">
        <Grid.Background>
            <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                <GradientStop Color="#FF141714" Offset="0"/>
                <GradientStop Color="#FFDD520E" Offset="0.37"/>
                <GradientStop Color="#FF0F2E6A" Offset="0.861"/>
            </LinearGradientBrush>
        </Grid.Background>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="TextBlock1" Text="This is a native Silverlight ad!" TextWrapping="Wrap" FontSize="40" HorizontalAlignment="Center" Foreground="White" />
            <TextBlock x:Name="counter" Text="5 seconds remain" FontSize="32" Foreground="#66ffffff" HorizontalAlignment="Center" Margin="12" />
        </StackPanel>
    </Grid>
</UserControl>
