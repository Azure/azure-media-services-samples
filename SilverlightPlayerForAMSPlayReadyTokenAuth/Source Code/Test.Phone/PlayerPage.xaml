        				<Grid>
        					<Grid.Resources>
        						<smf_converters:TimeSpanValueConverter x:Key="TimeSpanValueConverter"/>
        					</Grid.Resources>
        					<VisualStateManager.VisualStateGroups>
        						<VisualStateGroup x:Name="PlaylistStates">
        							<VisualStateGroup.Transitions>
